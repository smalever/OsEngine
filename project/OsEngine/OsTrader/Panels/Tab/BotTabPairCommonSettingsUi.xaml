        <Label Name="LabelCointegrationDeviation" Content="Deviation" HorizontalAlignment="Left" Margin="299,379,0,0" VerticalAlignment="Top"/>
        <TextBox Name="TextBoxCointegrationDeviation" HorizontalAlignment="Left" Margin="427,379,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>

        <Button Name="ButtonSave" Content="Save" HorizontalAlignment="Right" Margin="0,0,4,5" VerticalAlignment="Bottom" Width="220"/>
