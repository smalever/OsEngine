        <Label Name="LabelVolume2" Content="Volume (Currency)" HorizontalAlignment="Left" Margin="299,136,0,0" VerticalAlignment="Top"/>
        <TextBox Name="TextBoxVolume2" HorizontalAlignment="Left" Margin="427,136,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>

        <Button Name="ButtonPositionSupport" Content="Position support" Margin="191,201,181,0" VerticalAlignment="Top"/>
